pipeline {
	agent any
	stages {
		stage('Clean stage') {
			steps {
				dir("TransferFundsApp") {
					bat 'mvn clean'
				}
			}
		}
		stage('Compile stage') {
			steps {
				dir("TransferFundsApp") {
					bat 'mvn compile'
				}
			}
		}
		stage('Install stage') {
			steps {
				dir("TransferFundsApp") {
					bat 'mvn install'
				}
			}
		}
		stage('Deploy stage') {
			steps {
				dir("TransferFundsApp/target") {
					withEnv(['JENKINS_NODE_COOKIE=DontKillMe']) {
						bat 'start java -Dserver.port=3000 -jar TransferFundsApp-0.0.1-SNAPSHOT.jar'
					}
				}
			}
		}
	}
}
